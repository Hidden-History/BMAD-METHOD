# BMAD Memory System Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it's in .gitignore

# ==============================================
# Project Configuration
# ==============================================

# Project identifier (for memory isolation/multitenancy)
# Use lowercase letters, numbers, and hyphens only
# Example: my-project, task-tracker-api, legal-ai-system
PROJECT_ID=your-project-name

# ==============================================
# Qdrant Vector Database
# ==============================================

# Qdrant connection URL
# Production: https://your-qdrant-cloud-instance.qdrant.io
# Local development: http://localhost:6333
QDRANT_URL=http://localhost:6333

# Qdrant API key (leave blank for local development)
QDRANT_API_KEY=

# ==============================================
# Qdrant Collections
# ==============================================

# Collection for project-specific knowledge
# Stores: architecture decisions, story outcomes, implementation patterns
QDRANT_KNOWLEDGE_COLLECTION=bmad-knowledge

# Collection for agent chat memory
# Stores: workflow decisions, PM decisions, recent context
QDRANT_AGENT_MEMORY_COLLECTION=agent-memory

# Collection for universal best practices
# Stores: cross-project patterns, proven solutions
QDRANT_BEST_PRACTICES_COLLECTION=bmad-best-practices

# ==============================================
# Memory System Behavior
# ==============================================

# Memory mode: 'hybrid' (Qdrant + file fallback) or 'qdrant-only'
MEMORY_MODE=hybrid

# Enable file-based fallback when Qdrant unavailable
ENABLE_MEMORY_FALLBACK=true

# ==============================================
# Optional: Advanced Configuration
# ==============================================

# Embedding model (default: sentence-transformers/all-MiniLM-L6-v2)
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Embedding dimension (default: 384)
# EMBEDDING_DIMENSION=384

# Maximum tokens per memory shard (default: 300)
# MAX_SHARD_TOKENS=300

# Minimum similarity score threshold (default: 0.5)
# MIN_SIMILARITY_SCORE=0.5
